<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cart_layout_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:strokeColor="@color/medium_gray"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    app:strokeWidth="1dp"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="2dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="6dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgProduct"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/red_skirt" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtProdName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="4dp"
                        android:textSize="16sp"
                        android:maxLines="2"
                        android:maxWidth="200dp"
                        android:ellipsize="end"
                        android:text="Product Name" />

                    <TextView
                        android:id="@+id/txtOrigPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Original Price"
                        android:fontFamily="sans-serif"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/txtBargainPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bargain Price"
                        android:fontFamily="sans-serif"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/txtBargainDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bargain date"
                        android:fontFamily="sans-serif"
                        android:layout_marginTop="4dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtStatus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Status"
                            android:fontFamily="sans-serif" />

                        <ImageView
                            android:id="@+id/imgDrop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_baseline_arrow_drop_up_24"
                            app:tint="@color/black" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/childLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="4dp"
                android:text="Requested to:" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgStore"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/avatar" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:id="@+id/txtStoreName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sushant Shrestha" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgAvailability"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_baseline_circle"
                            app:tint="@color/golden_stars" />

                        <TextView
                            android:id="@+id/txtAvailability"
                            style="@style/TextAppearance.AppCompat.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:layout_marginStart="4dp"
                            android:text="Available" />
                    </LinearLayout>

                </LinearLayout>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/message_icon"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/circle_bg"
                    android:backgroundTint="@color/medium_gray"
                    android:padding="5dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_phone_24"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/circle_bg"
                    android:backgroundTint="@color/medium_gray"
                    android:padding="5dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                android:paddingVertical="4dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button"
                    android:id="@+id/btnNegotiate"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    app:shapeAppearanceOverlay="@style/Widget.MaterialComponents.Button"
                    app:cornerRadius="2dp"
                    android:text="Negotiate"
                    app:icon="@drawable/ic_baseline_handshake"
                    app:iconGravity="textStart"
                    android:layout_marginEnd="15sp"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:drawableTint="@color/white" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:id="@+id/btnCancelRequest"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    app:shapeAppearanceOverlay="@style/Widget.MaterialComponents.Button"
                    app:cornerRadius="2dp"
                    app:strokeColor="@color/red"
                    android:text="Cancel Request"
                    app:icon="@drawable/ic_baseline_cancel"
                    app:iconGravity="textStart"
                    app:iconTint="@color/red"
                    android:textAllCaps="false"
                    android:textColor="@color/red"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>