<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityProductDetails">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        app:tint="@color/skyBlue" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#F0F0F0"
        android:drawableEnd="@drawable/ic_message_outlined"
        android:text="Bargain"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/black"
        android:drawableTint="@color/black"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="64dp" />

    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/imgSlider"
        android:layout_width="wrap_content"
        android:layout_height="305dp"
        app:iss_auto_cycle="false"
        android:layout_marginTop="10dp"
        app:iss_corner_radius="6"
        app:iss_selected_dot="@drawable/selected_dots"
        app:iss_unselected_dot="@drawable/unselected_dots"
        app:iss_placeholder="@raw/email_sent1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="French Store Collection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSlider" />

    <TextView
        android:id="@+id/txtPrdtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/gilroy_bold"
        android:text="Red Skirt"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/open_sans"
        android:text="Select Size"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPrdtName" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:selectionRequired="true"
        android:padding="5dp"
        app:checkedChip="@id/chipSml"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipSml"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:fontFamily="@font/gilroy_bold"
            android:text="S"
            app:chipMinTouchTargetSize="0dp"
            app:chipStrokeWidth="1dp"
            android:layout_marginEnd="10dp"
            android:textAlignment="center"
            app:chipCornerRadius="4dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipMed"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="M"
            android:layout_marginEnd="10dp"
            app:chipMinTouchTargetSize="0dp"
            app:chipStrokeWidth="1dp"
            android:textAlignment="center"
            app:chipCornerRadius="4dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipLrg"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="L"
            android:layout_marginEnd="10dp"
            app:chipMinTouchTargetSize="0dp"
            app:chipStrokeWidth="1dp"
            android:textAlignment="center"
            app:chipCornerRadius="4dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipXl"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:chipStrokeWidth="1dp"
            android:text="XL"
            app:chipMinTouchTargetSize="0dp"
            android:textAlignment="center"
            app:chipCornerRadius="4dp" />
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/open_sans"
        android:text="Description"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chip_group" />

    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/open_sans"
        android:lineSpacingExtra="4dp"
        android:maxLines="2"
        android:text="Red skirt made of wool. Provide cool and elegant look."
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />


    <LinearLayout
        android:id="@+id/cartLyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/cart_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="32dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtotal"
                android:textColor="#9A9A9A"
                android:fontFamily="@font/gilroy_medium"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/gilroy_bold"
                android:textSize="24sp"
                android:text="Rs. 1000" />
        </LinearLayout>

        <Button
            style="@style/Widget.AppCompat.Button"
            android:layout_width="112dp"
            android:layout_height="61dp"
            android:text="Add to Cart"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:textAllCaps="false" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>