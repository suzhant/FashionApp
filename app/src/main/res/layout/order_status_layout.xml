<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="20sp"
        android:scaleType="centerCrop"
        android:src="@drawable/dotted_line"
        app:layout_constraintBottom_toBottomOf="@+id/radio_1"
        app:layout_constraintEnd_toStartOf="@+id/radio_2"
        app:layout_constraintStart_toEndOf="@+id/radio_1"
        app:layout_constraintTop_toTopOf="@+id/radio_1" />

    <ImageView
        android:id="@+id/radio_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:src="@drawable/ic_baseline_radio_button_checked_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/material_on_background_disabled" />

    <TextView
        style="@style/TextAppearance.AppCompat.Small"
        android:id="@+id/txt1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Delivery Address"
        android:textSize="12sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/radio_1"
        app:layout_constraintStart_toStartOf="@+id/radio_1"
        app:layout_constraintTop_toBottomOf="@+id/radio_1" />

    <ImageView
        android:id="@+id/radio_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:src="@drawable/ic_baseline_radio_button_checked_24"
        app:layout_constraintEnd_toStartOf="@+id/radio_3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/radio_1"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/material_on_background_disabled" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="20sp"
        android:scaleType="centerCrop"
        android:src="@drawable/dotted_line"
        app:layout_constraintBottom_toBottomOf="@+id/radio_2"
        app:layout_constraintEnd_toStartOf="@+id/radio_3"
        app:layout_constraintStart_toEndOf="@+id/radio_2"
        app:layout_constraintTop_toTopOf="@+id/radio_2" />


    <TextView
        style="@style/TextAppearance.AppCompat.Small"
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/radio_2"
        app:layout_constraintStart_toStartOf="@+id/radio_2"
        app:layout_constraintTop_toBottomOf="@+id/radio_1" />

    <ImageView
        android:id="@+id/radio_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:src="@drawable/ic_baseline_radio_button_checked_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/material_on_background_disabled" />

    <TextView
        style="@style/TextAppearance.AppCompat.Small"
        android:id="@+id/txt3"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Order Placed"
        android:textSize="12sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/radio_3"
        app:layout_constraintStart_toStartOf="@+id/radio_3"
        app:layout_constraintTop_toBottomOf="@+id/radio_3" />

</androidx.constraintlayout.widget.ConstraintLayout>