<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/red_skirt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sushant Shrestha"
                android:maxLines="2"
                android:visibility="gone"
                android:textAlignment="center"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/txtProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Nike shoe for men" />

        <TextView
            android:id="@+id/txtOrigPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Original Price: Rs 1000" />

            <TextView
                android:id="@+id/txtBargainPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bargain Price: Rs 1000" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="4dp"
        android:text="Requested by" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:src="@drawable/avatar" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sushant Shrestha" />

            <TextView
                android:id="@+id/txtTry"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="4 try remaining" />
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/message_icon"
            android:layout_marginStart="10dp"
            android:background="@drawable/circle_bg"
            android:backgroundTint="@color/medium_gray"
            android:padding="5dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone_24"
            android:layout_marginStart="10dp"
            android:background="@drawable/circle_bg"
            android:backgroundTint="@color/medium_gray"
            android:padding="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingVertical="4dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAccept"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            app:shapeAppearanceOverlay="@style/Widget.MaterialComponents.Button"
            app:cornerRadius="2dp"
            android:text="Accept"
            android:layout_marginEnd="5dp"
            android:textSize="12sp"
            android:drawableTint="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReject"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            app:shapeAppearanceOverlay="@style/Widget.MaterialComponents.Button"
            app:cornerRadius="2dp"
            android:text="Reject"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/red"
            android:textSize="12sp"
            android:drawableTint="@color/white" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNegotiate"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            app:shapeAppearanceOverlay="@style/Widget.MaterialComponents.Button"
            app:cornerRadius="2dp"
            android:text="Negotiate"
            android:backgroundTint="@color/royal_blue"
            android:textSize="12sp"
            android:drawableTint="@color/white" />
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerThickness="0.5dp" />

</LinearLayout>