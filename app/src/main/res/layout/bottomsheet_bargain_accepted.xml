<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bargainParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:paddingTop="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleX="2.5"
        android:scaleY="2"
        android:paddingBottom="2dp"
        android:src="@drawable/horizontal_rule"
        android:layout_gravity="center" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Bargain"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_close_24" />
    </RelativeLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:dividerColor="@color/medium_gray" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:dividerColor="@color/medium_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Information"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtOrigPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Original Price"
        android:fontFamily="sans-serif"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/txtBargainPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bargain Price"
        android:fontFamily="sans-serif"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/txtBargainDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bargain date"
        android:fontFamily="sans-serif"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/txtValidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bargain date"
        android:fontFamily="sans-serif"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="status: approved"
        android:fontFamily="sans-serif"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:id="@+id/btnProductPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:text="Go to Product page" />


    <!--    <TextView-->
    <!--        android:id="@+id/txtMessage1"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:text="Bargain valid until 2 days from the approved date."-->
    <!--        android:layout_marginTop="10dp"-->
    <!--        android:background="@drawable/rectangle_bg"-->
    <!--        android:padding="6dp"-->
    <!--        android:textColor="@color/black"-->
    <!--        android:textAlignment="center"-->
    <!--        android:layout_marginStart="20dp"-->
    <!--        android:layout_marginEnd="20dp" />-->

    <TextView
        android:id="@+id/txtRequest_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:visibility="gone"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="10dp"
        android:text="Requested to:" />

    <LinearLayout
        android:id="@+id/linear_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgStore"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:src="@drawable/avatar" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/txtStoreName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Sushant Shrestha" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtAvailability"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Available" />
            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/imgChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/message_icon"
            android:background="@drawable/circle_bg"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="@color/medium_gray"
            android:padding="5dp" />

        <ImageButton
            android:id="@+id/imgCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone_24"
            android:layout_marginEnd="20dp"
            android:background="@drawable/circle_bg"
            android:backgroundTint="@color/medium_gray"
            android:padding="5dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtMessage2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You can initate new bargain request after 2 days from the approved date."
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_bg"
        android:padding="6dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp" />

</LinearLayout>